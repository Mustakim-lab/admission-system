<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admission Form"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp">

    </TextView>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="100dp">
       <EditText
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:hint="Name..."
           android:id="@+id/nameEdit_ID">

       </EditText>

       <EditText
           android:id="@+id/deathOfEdit_ID"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@+id/nameEdit_ID"
           android:hint="Date of birth">

       </EditText>

       <Spinner
           android:id="@+id/genderSpinner_ID"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/nameEdit_ID"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="10dp">

       </Spinner>

       <TextView
           android:id="@+id/text_ID"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/nameEdit_ID"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="13dp"
           android:layout_toRightOf="@+id/genderSpinner_ID"
           android:text="Gender"
           android:textColor="#000">

       </TextView>

       <EditText
           android:id="@+id/phoneEdit_ID"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/nameEdit_ID"
           android:layout_marginLeft="15dp"
           android:layout_toRightOf="@id/text_ID"
           android:hint="Phone">

       </EditText>

       <EditText
           android:id="@+id/sscResultEdit_ID"
           android:layout_width="190dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/genderSpinner_ID"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="15dp"
           android:hint="S.S.C Result">

       </EditText>
       <EditText
           android:layout_width="190dp"
           android:layout_height="wrap_content"
           android:layout_below="@id/genderSpinner_ID"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@+id/sscResultEdit_ID"
           android:hint="H.S.C Result"
           android:id="@+id/hsscResultEdit_ID">
       </EditText>
   </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submitBtn_ID"
        android:text="Submit"
        android:layout_marginTop="20dp">

    </Button>
</LinearLayout>